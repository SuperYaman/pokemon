{% extends 'base.html.twig' %}
{% block title %}

{% endblock %}

{% block body %}
    <div>


        {% if pokemons is not empty %}

            <table class="table table-hover table-striped text-center mt-3">

                <thead class="bg-dark text-white">
                <tr>
                    <th>ID</th>
                    <th>Numero</th>
                    <th>Nom</th>
                    <th>Taille</th>
                    <th>Poids</th>
                    <th>Sexe</th>
                    <th>Type</th>
                    <th>Image</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>
                </thead>

                <tbody>


                {% for pokemon in pokemons %}

                    <tr class="align-middle">

                        <td>{{ pokemon.id }}</td>

                        <td>{{ pokemon.number }}</td>

                        <td>{{ pokemon.nom }}</td>


                        <td>{{ pokemon.taille }}</td>

                        <td>{{ pokemon.poids }}</td>

                        <td>{{ pokemon.sexe }}</td>

                        {% for untype in pokemon.types %}
                            <td>{{ untype.type }}</td>
                        {% endfor %}



                        <td>
                            <img src="{{ asset('img/imagesUpload/' ~ pokemon.image) }}" width="50">
                        </td>

                        <td>
                            <a href="{{ path('updatepokemon', {id:pokemon.id}) }}" class="btn btn-primary"><button>Modifier</button></a>
                        </td>
                        <td>
                            <a href="{{ path('deletepokemon', {id:pokemon.id}) }}" class="btn btn-primary"><button>Supprimer</button></a>
                        </td>

                    </tr>


                {% endfor %}


                </tbody>


            </table>


        {% else %}

            <h4 class="text-center text-danger fst-italic mt-3">Il n'y a pas de produits pour le moment</h4>

        {% endif %}

    </div>
{% endblock %}



